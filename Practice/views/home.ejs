<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="output.css">

    <title>Home Page</title>
</head>
<body class="bg-gray-100 min-h-screen">
    <header class="bg-blue-600 text-white w-full py-6 text-center shadow-lg">
        <h1 class="text-4xl font-bold tracking-wide">Welcome to Airbnb</h1>
    </header>

    <main class="flex flex-col items-center justify-center mt-8">
        <a href="/register"
            class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out">
            Go to Register Page
        </a>
    </main>
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6">
        <!-- Section Heading -->
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          Your Active Listings
          <div class="h-1 w-20 bg-blue-500 mx-auto mt-4 rounded-full"></div>
        </h2>
    
        <!-- Styled List -->
        <ul>
          <% registeredHomes.forEach((homes, index) => { %>
            <li class="group bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border-2 border-gray-100 mb-6 last:mb-0">
              <div class="p-6 flex flex-col sm:flex-row sm:items-center justify-between">
                <!-- Home Details -->
                <div class="flex-1">
                  <p class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                    Name: <%= homes.text %>
                  </p>
                  <p class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                    Price: $<%= homes.price %>
                  </p>
                  <p class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                    Rating: <%= homes.rating %> / 5
                  </p>
                  <p class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                    Photo: <%= homes.photo %>
                  </p>
                  <p class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                    Location: <%= homes.location %>
                  </p>
                  <p class="mt-2 text-sm text-gray-600">
                    Listed on <%= new Date().toLocaleDateString() %>
                  </p>
                </div>
              </div>
            </li>
          <% }) %>
        </ul>
    
        <!-- No Listings Placeholder -->
        <% if (registeredHomes.length === 0) { %>
          <div class="text-center py-12">
            <p class="text-gray-600">No listings found. Add your first property!</p>
          </div>
        <% } %>
      </div>
    </section>
    
    
    
    
</body>
</html>